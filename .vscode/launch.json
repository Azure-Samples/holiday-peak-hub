{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI app (set APP_MODULE env)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "${env:APP_MODULE}",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/lib/src"
      },
      "jinja": true
    }
  ]
}
